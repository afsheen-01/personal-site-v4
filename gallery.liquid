                                <div class="flex items-center gap-2">

                                    <h3 class="md:text-xl text-base text-primary-text-light dark:text-primary-text-dark md:font-normal">
                                        <a href="{{ imageCollection.url | url }}">{{ imageCollection.data.title }}</a>
                                    </h3>

                                    <span class="text-timeline-light dark:text-timeline-dark md:inline hidden"> â€¢ {{ imageCollection.data.date | date: "%b %d, %Y" }}</span>
                                </div>
                                
                            </div>
                        {% endfor %}
                    </div>
                </div>
                    
            </main>
            
            <div class="block md:hidden">{% include 'footer' %}</div>
        </div>
    </body>
